<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/result_Image_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/history_start_us" />

    <TextView
        android:id="@+id/result_fragment_question_id"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/protest_riot_regular"
        android:text="@string/result"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result_fragment_result_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/protest_riot_regular"
        android:text="@string/_14_15"
        android:textColor="#FFFFFF"
        android:textSize="90sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_fragment_question_id" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/result_fragment_start_again_button"
        android:layout_width="277dp"
        android:layout_height="80dp"
        android:layout_marginTop="96dp"
        android:fontFamily="@font/protest_riot_regular"
        android:text="@string/start_again"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="@drawable/start_button"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_fragment_result_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>